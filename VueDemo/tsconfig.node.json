{
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  /// 这些配置文件的路径模式
  "compilerOptions": {
    "target": "ESNext", // 目标 ECMAScript 版本
    "module": "ESNext", // 允许使用 ESNext 模块语法
    "moduleResolution": "Bundler", // 使用 Bundler 模块解析策略
    "esModuleInterop": true, // 允许默认导入非模块化的 CommonJS 模块
    "strict": true, // 启用所有严格类型检查选项
    "skipLibCheck": true, // 跳过库文件检查
    "noEmit": true, // 不生成输出文件
    "types": ["node"], // 添加 Node.js 类型支持
    "forceConsistentCasingInFileNames": true //这是属性，用于强制文件名大小写一致
  }
}
